<?xml version="1.0" encoding="UTF-8" ?>
<!DOCTYPE mapper
        PUBLIC "-//mybatis.org//DTD Mapper 3.0//EN"
        "http://mybatis.org/dtd/mybatis-3-mapper.dtd">
<mapper namespace="com.yue.mapper.UserMapper">
    <resultMap id="userMap" type="UserInfo">
        <id property="id" column="id" />
        <result property="phone" column="phone"/>
        <result property="username" column="username"/>
        <result property="updateTime" column="update_time"/>
        <result property="createTime" column="create_time"/>
<!--        <result property="createTime" column="createTime" typeHandler="org.apache.ibatis.type.SqlTimestampTypeHandler" />-->
<!--        <result property="updateTime" column="updateTime" typeHandler="org.apache.ibatis.type.SqlTimestampTypeHandler" />-->
        <result property="password" column="password"/>
        <result property="email" column="email"/>
    </resultMap>
    <insert id="register">
        INSERT INTO `moran007`.`user_info` (`username`, `password`, `phone`, `email`) VALUES (#{username}, #{password}, #{phone}, #{email})
    </insert>
    <select id="login" resultMap="userMap">
        select * from user_info where password=#{password} and phone=#{phone}
    </select>
</mapper>
